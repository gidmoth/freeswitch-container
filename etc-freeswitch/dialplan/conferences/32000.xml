<include>
  <extension name="public_g722">
      <condition field="destination_number" expression="32000">
        <!-- force G722 codec for all conferees -->
        <action application="set" data="codec_string=G722"/>
        <action application="answer"/>
        <action application="conference" data="public_16kHz@16kHz-novideo+${conpin}+flags{${conf_flags}}"/>
      </condition>
  </extension>
</include>